{
    "name": "io-ts-bigint",
    "version": "1.0.0",
    "description": "io-ts library for bigints",
    "homepage": "https://github.com/EricCrosson/io-ts-bigint",
    "bugs": {
        "url": "https://github.com/EricCrosson/io-ts-bigint/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EricCrosson/io-ts-bigint.git"
    },
    "license": "ISC",
    "author": "Eric Crosson <eric.s.crosson@utexas.edu> (https://github.com/EricCrosson)",
    "main": "dist/lib/index.js",
    "types": "dist/lib/index.d.ts",
    "files": [
        "dist/lib/"
    ],
    "scripts": {
        "prepublishOnly": "npm run clean && npm run compile",
        "ava": "ava -v",
        "clean": "rimraf --no-glob dist",
        "compile": "tsc",
        "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
        "docs": "docs-ts",
        "lint": "eslint --ext ts .",
        "lint:fix": "eslint --ext ts --fix .",
        "lint-staged": "lint-staged",
        "prettier:check": "prettier --list-different lib/**/*.ts",
        "prettier:write": "prettier --write lib/**/*.ts",
        "test": "npm run lint && npm run prettier:check && nyc ava && npm run docs",
        "watch:ava": "nodemon -e 'ts json' -x 'npm run ava -- -s -v --fail-fast || true'",
        "watch:compile": "nodemon -e 'ts json' -x 'npm run compile || true'",
        "watch:lint": "nodemon -e 'ts js json' -x 'npm run lint || true'",
        "watch:test": "nodemon -e 'ts json' -x 'npm test || true'"
    },
    "pre-commit": "lint-staged",
    "lint-staged": {
        "*.ts": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "peerDependencies": {
        "fp-ts": "^2.8.3",
        "io-ts": "~2.1.3"
    },
    "devDependencies": {
        "@types/node": "^14.14.17",
        "@typescript-eslint/eslint-plugin": "^4.11.1",
        "@typescript-eslint/parser": "^4.11.1",
        "ava": "^3.14.0",
        "ava-fast-check": "^4.0.0",
        "codecov": "^3.8.1",
        "docs-ts": "^0.5.3",
        "eslint": "^7.16.0",
        "eslint-plugin-ava": "^11.0.0",
        "eslint-plugin-security": "^1.4.0",
        "fast-check": "^2.10.0",
        "lint-staged": "^10.5.3",
        "nyc": "^15.1.0",
        "pre-commit": "^1.2.2",
        "prettier": "2.2.1",
        "rimraf": "^3.0.2",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.3"
    },
    "ava": {
        "extensions": [
            "ts"
        ],
        "files": [
            "!dist/**/*.d.ts",
            "test/**/test-*.ts"
        ],
        "require": [
            "ts-node/register"
        ]
    },
    "nyc": {
        "extension": [
            ".ts"
        ],
        "include": [
            "lib/*.ts"
        ],
        "require": [
            "ts-node/register"
        ]
    },
    "keywords": [
        "io-ts",
        "bigint"
    ]
}
